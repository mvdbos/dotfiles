{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "external_directory": {
      "*": "ask",
      "/tmp/**": "allow",
      "/private/tmp/**": "allow",
      "~/.config/**": "allow",
      "~/.dotfiles/**": "allow"
    },
    "bash": {
      "*": "allow",
      "git push*": "ask",
      "git push --force*": "ask",
      "git push --force-with-lease*": "ask",
      "git push -f*": "ask",
      "git push --delete*": "ask",
      "git reset --hard*": "ask",
      "git rebase*": "ask",
      "git filter-branch*": "ask"
    }
  },
  "mcp": {
    "azure-devops": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@azure-devops/mcp",
        "{env:AZURE_DEVOPS_ORG}",
        "-d",
        "core",
        "work",
        "work-items",
        "repositories",
        "pipelines"
      ],
      "enabled": true
    }
  }
}
